<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.DetailFragment"
    android:background="@drawable/fondo_detailed"
    android:scrollbars="none">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:paddingBottom="20dp"
        android:scrollbars="none"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HERO NAME"
            android:textSize="55sp"
            android:fontFamily="@font/name_superhero"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/boton_favorito"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/corazon_vacio"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp"
            />

        <ImageView
            android:id="@+id/imageHero"
            android:layout_width="150dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@id/nombre"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/corazon_vacio"/>
        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="175dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/nombre"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/imageHero"
            android:background="#03A9F4"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/tituloBiografia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BIOGRAFIA"
                android:fontFamily="@font/titulos_info"
                android:textSize="25sp"
                android:textColor="#373636"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/titulos_biografia"
                app:layout_constraintTop_toBottomOf="@id/tituloBiografia"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/tv_race"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/titulos_biografia"
                app:layout_constraintTop_toBottomOf="@id/tv_gender"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/tv_altura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/titulos_biografia"
                app:layout_constraintTop_toBottomOf="@id/tv_race"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/tv_peso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/titulos_biografia"
                app:layout_constraintTop_toBottomOf="@id/tv_altura"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icono_pesa"
                app:layout_constraintStart_toEndOf="@id/tv_peso"
                app:layout_constraintBottom_toBottomOf="@id/tv_peso"
                app:layout_constraintTop_toTopOf="@id/tv_peso"
                android:layout_marginStart="10dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icono_altura"
                app:layout_constraintStart_toEndOf="@id/tv_altura"
                app:layout_constraintBottom_toBottomOf="@id/tv_altura"
                app:layout_constraintTop_toTopOf="@id/tv_altura"
                android:layout_marginStart="10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/stats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imageHero"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.85"
            android:layout_marginTop="25dp"
            android:background="#00BCD4"
            android:paddingBottom="10dp"
            >
            <TextView
                android:id="@+id/titulo_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titulos_info"
                android:text="ESTADÍSTIQUES"
                android:textSize="27sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:textColor="#2B2A2A"/>
            <TextView
                android:id="@+id/combat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMBATE "
                android:textSize="17sp"
                android:textFontWeight="900"
                android:fontFamily="@font/titulos_biografia"
                android:textColor="#FF9800"
                app:layout_constraintTop_toBottomOf="@id/titulo_stats"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/durability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AGUANTE "
                android:textSize="17sp"
                android:textColor="#E91E63"
                android:textFontWeight="900"
                android:fontFamily="@font/titulos_biografia"
                app:layout_constraintTop_toBottomOf="@id/combat"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/intelligence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INTELIGENCIA "
                android:textSize="17sp"
                android:textColor="#037065"
                android:textFontWeight="900"
                android:fontFamily="@font/titulos_biografia"
                app:layout_constraintTop_toBottomOf="@id/durability"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PODER "
                android:textSize="17sp"
                android:textFontWeight="900"
                android:fontFamily="@font/titulos_biografia"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@id/intelligence"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VELOCIDAD "
                android:textSize="17sp"
                android:textColor="#FFEB3B"
                android:textFontWeight="900"
                android:fontFamily="@font/titulos_biografia"
                app:layout_constraintTop_toBottomOf="@id/power"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/strenght"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FUERZA "
                android:textSize="17sp"
                android:textColor="#AC3E36"
                android:textFontWeight="900"
                android:fontFamily="@font/titulos_biografia"
                app:layout_constraintTop_toBottomOf="@id/speed"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>
            <ProgressBar
                android:id="@+id/pb_combat"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="150dp"
                android:layout_height="10dp"
                android:min="0"
                android:max="100"
                app:layout_constraintTop_toTopOf="@id/combat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/combat"
                android:progressTint="#FF9800"
                android:layout_marginEnd="25dp"
                />
            <ProgressBar
                android:id="@+id/pb_aguante"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="150dp"
                android:layout_height="10dp"
                android:min="0"
                android:max="100"
                app:layout_constraintTop_toTopOf="@id/durability"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/durability"
                android:progressTint="#E91E63"
                android:layout_marginEnd="25dp"
                />
            <ProgressBar
                android:id="@+id/pb_inteligencia"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="150dp"
                android:layout_height="10dp"
                android:min="0"
                android:max="100"
                app:layout_constraintTop_toTopOf="@id/intelligence"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/intelligence"
                android:progressTint="#037065"
                android:layout_marginEnd="25dp"
                />
            <ProgressBar
                android:id="@+id/pb_poder"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="150dp"
                android:layout_height="10dp"
                android:min="0"
                android:max="100"
                app:layout_constraintTop_toTopOf="@id/power"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/power"
                android:progressTint="#000000"
                android:layout_marginEnd="25dp"
                />
            <ProgressBar
                android:id="@+id/pb_velocidad"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="150dp"
                android:layout_height="10dp"
                android:min="0"
                android:max="100"
                app:layout_constraintTop_toTopOf="@id/speed"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/speed"
                android:progressTint="#FFEB3B"
                android:layout_marginEnd="25dp"
                />
            <ProgressBar
                android:id="@+id/pb_fuerza"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="150dp"
                android:layout_height="10dp"
                android:min="0"
                android:max="100"
                app:layout_constraintTop_toTopOf="@id/strenght"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/strenght"
                android:progressTint="#AC3E36"
                android:layout_marginEnd="25dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/otra_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.925"
            app:layout_constraintTop_toBottomOf="@id/stats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp"
            android:paddingBottom="15dp"
            android:background="#3F51B5">
            <TextView
                android:id="@+id/titulo_other_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titulos_info"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Otra Información:"
                android:textSize="25sp"
                android:textColor="#232323"
                android:paddingStart="20dp"
                android:layout_marginTop="10dp" />
            <TextView
                android:id="@+id/first_apperence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/titulo_other_info"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="17sp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:paddingEnd="15dp"
                android:text="Primera aparición:"/>
            <TextView
                android:id="@+id/occupations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/first_apperence"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="17sp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:paddingEnd="15dp"
                android:text="Trabajos:"/>
            <TextView
                android:id="@+id/groupAffiliations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/occupations"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="17sp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:paddingEnd="15dp"
                android:text="Grupos en los que ha estado:"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>